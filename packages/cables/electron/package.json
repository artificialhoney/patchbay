{
  "name": "@cables/electron",
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/js/cables-electron.js",
  "scripts": {
    "start": "cross-env npm_config_apiconfig=local gulp watch",
    "start:fullscreen": "cross-env npm_config_apiconfig=local gulp watch --render-fullscreen",
    "clean": "rimraf dist/",
    "build": "pnpm run build:electron && pnpm run build:client && pnpm run build:assets",
    "build:electron": "cross-env npm_config_apiconfig=local rollup -c rollup.config.mjs",
    "build:client": "rollup -c rollup.config.client.mjs",
    "build:assets": "cross-env npm_config_apiconfig=local gulp build",
    "pack": "run-s clean build _pack",
    "pack:mac": "run-s clean build _pack:mac",
    "pack:win": "run-s clean build _pack:win",
    "pack:linux": "run-s clean build _pack:linux",
    "_pack": "electron-builder -mwl --dir",
    "_pack:mac": "electron-builder -m --dir -c.mac.identity=null",
    "_pack:win": "electron-builder -w --dir",
    "_pack:linux": "electron-builder -l --dir",
    "dist": "electron-builder -mwl",
    "dist:mac": "electron-builder -m",
    "dist:win": "electron-builder -w",
    "dist:linux": "electron-builder -l"
  },
  "build": {
    "productName": "cables",
    "appId": "gl.cables.standalone",
    "nodeVersion": "20.13.1",
    "asar": true,
    "includeSubNodeModules": true,
    "electronLanguages": [
      "en-US"
    ],
    "files": [
      "cables.json",
      "src/**/*",
      "views/**/*",
      "index.html",
      "dist/**/*",
      "LICENCE",
      "cables.txt",
      {
        "from": "../../../node_modules/",
        "to": "./node_modules/",
        "filter": [
          "shared_constants.json"
        ]
      },
      {
        "from": "../../../",
        "to": "./node_modules/",
        "filter": [
          "shared_constants.json"
        ]
      },
      {
        "from": "resources/assets/",
        "to": "resources/assets/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "buildResources": "resources/build"
    },
    "fileAssociations": [
      {
        "ext": "cables",
        "name": "cables patch",
        "description": "cables patch",
        "role": "Editor",
        "rank": "Owner"
      }
    ],
    "mac": {
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "resources/build/entitlements.mac.plist",
      "entitlementsInherit": "resources/build/entitlements.mac.plist",
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "verifyUpdateCodeSignature": false,
      "signAndEditExecutable": false,
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "artifactName": "${productName}-${version}-${os}-x64.${ext}",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "publish": [
      "github"
    ]
  },
  "dependencies": {
    "@cables/api": "workspace:*",
    "@cables/client": "workspace:*",
    "archiver": "5.3.1",
    "chokidar": "3.6.0",
    "electron": "^36.1.0",
    "electron-localshortcut": "3.2.1",
    "electron-log": "5.1.5",
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-plugin-import": "2.27.5",
    "execa": "8.0.1",
    "fluent-ffmpeg": "^2.1.3",
    "fs-extra": "11.2.0",
    "image-size": "1.0.2",
    "import-sync": "2.2.2",
    "jsonfile": "6.1.0",
    "marked": "12.0.2",
    "md5-file": "5.0.0",
    "mime": "^4.0.4",
    "mkdirp": "2.1.3",
    "moment-mini": "2.29.4",
    "npm": "10.5.2",
    "pako": "2.1.0",
    "project-name-generator": "2.1.9",
    "sanitize-filename": "1.6.3",
    "uuid-v4": "0.1.0"
  }
}
