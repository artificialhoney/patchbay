{
  "name": "patchbay",
  "version": "1.0.0",
  "description": "A fork of the brilliant [cabels.gl](https://cabels.gl) application for maintaining and extending it to build a new robust full-stack.",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "prettier --check ./**",
    "format:write": "prettier --write ./**",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean:all": "rimraf packages/cables/*/dist",
    "build:all": "pnpm run clean:all && pnpm run --filter @cables/cables build && pnpm run --filter @cables/ui build && pnpm run --filter @cables/electron build",
    "start:electron": "pnpm run --filter @cables/electron start",
    "start:stack": "mkdir -p ./.patchbay/{database,uploads,extensions,templates} && docker compose up -d"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.9.0",
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@moreplease/rollup-plugin-build-info": "^0.0.3",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "eslint": "^9.25.1",
    "globals": "^16.0.0",
    "gulp": "^5.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.1.4",
    "gulp-sass-no-nodesass": "^1.1.0",
    "gulp-svg-css": "^1.3.0",
    "gulp-svgmin": "^4.1.0",
    "prettier": "3.5.3",
    "rollup": "^4.40.1",
    "rollup-plugin-banner": "^0.2.1",
    "rollup-plugin-entry-code-injector": "^1.0.0",
    "rollup-plugin-string-import": "^1.2.5",
    "sass": "^1.87.0"
  },
  "workspaces": {
    "packages": [
      "packages/cables/*"
    ]
  }
}
